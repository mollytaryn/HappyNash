#!/usr/bin/env ruby
require 'highline/import'
Dir["./app/**/*.rb"].each { |f| require f }
Dir["./lib/*.rb"].each { |f| require f }

menu_prompt = <<EOS
1. Add a happy hour location
2. List all happy hour locations
3. Exit management menu
EOS

if ARGV.size == 1 and ARGV[0] == "manage"
  loop do
    choose do |menu|
      menu.prompt = ""

      locations_controller = LocationsController.new
      menu.choice('Add a happy hour location') do
        loop do
          user_input = ask("What is the name of the location you want to add?\n")
          response = locations_controller.add(user_input)
          say(response) unless response.nil?
          if /has\sbeen\sadded/.match(response)
            break
          end
        end
      end
      menu.choice('List all happy hour locations') do
        say(locations_controller.index)
        exit
      end
      menu.choice('Exit management menu') do
        say("You have successfully exited the management menu.\n")
        exit
      end
    end
  end
else
  print "[Help] Run as: ./happy_nash manage"
end
