#!/usr/bin/env ruby
require 'highline/import'
Dir["./app/**/*.rb"].each { |f| require f }
Dir["./lib/*.rb"].each { |f| require f }

menu_prompt = <<EOS
1. Add a happy hour location
2. List all happy hour locations
3. Exit management menu
EOS

if ARGV.size == 1 and ARGV[0] == "manage"
  choose do |menu|
    menu.prompt = ""

    locations_controller = LocationsController.new
    menu.choice('Add a happy hour location') { say("What is the name of the location you want to add?\n") }
    menu.choice('List all happy hour locations') { locations_controller.index }
    menu.choice('Exit management menu') { say("You have successfully exited the management menu.\n") }
  end
else
  print "[Help] Run as: ./happy_nash manage"
end
